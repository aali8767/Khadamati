<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layoutDirection="rtl"
    android:padding="16dp"
    android:textDirection="rtl"
    tools:context="dev.final_group.khadamati.screens.client.RequestServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="30dp" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:text="طلب خدمة"
            android:textDirection="rtl"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- وصف الطلب -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="وصف المشكلة أو الطلب"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="#1E88E5"
            app:helperText="يرجى وصف المشكلة بشكل واضح">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/requestDescriptionEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:minLines="4"
                android:padding="12dp"
                android:textDirection="rtl" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- تاريخ التنفيذ -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="تاريخ التنفيذ"
            app:endIconDrawable="@drawable/calendar_month_24"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none"
                android:textDirection="rtl" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- الوقت -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="الوقت"
            app:endIconDrawable="@drawable/access_time_24"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/timeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none"
                android:textDirection="rtl" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- الموقع -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="الموقع">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textDirection="rtl" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- زر التأكيد -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmRequestBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="تأكيد الطلب"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#1E88E5"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>

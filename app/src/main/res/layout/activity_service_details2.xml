<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    tools:context="dev.final_group.khadamati.screens.service_provider.ServiceDetailsActivity">

    <!-- عنوان الشاشة -->
    <TextView
        android:id="@+id/tvServiceDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تفاصيل الخدمة"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- البطاقة -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvServiceDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- عنوان القسم داخل البطاقة -->
            <TextView
                android:id="@+id/tvServiceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الخدمة"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- تفاصيل الخدمة -->
            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم الخدمة: تنظيف منازل"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="السعر: 100 شيكل"
                android:layout_marginTop="4dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvServiceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الوصف: خدمة تنظيف منزل شاملة لجميع الغرف."
                android:layout_marginTop="4dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- زر تعديل -->
    <Button
        android:id="@+id/btnEditService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعديل"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardService"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
